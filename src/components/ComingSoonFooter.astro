<section class="cs-footer" data-bg-color="#0A0A0A">
  <div class="cs-footer-content">
    <h2 class="cs-footer-title">Binnenkort</h2>
    <p class="cs-footer-text">Iets bijzonders is in de maak.</p>
    <div class="cs-footer-dots" aria-hidden="true">
      <span></span>
      <span></span>
      <span></span>
    </div>
  </div>
</section>

<script is:inline>
  const csFooter = document.querySelector('.cs-footer');
  if (csFooter) {
    const observer = new IntersectionObserver(
      (entries) => {
        entries.forEach((entry) => {
          if (entry.isIntersecting) csFooter.classList.add('is-visible');
        });
      },
      { threshold: 0.2 }
    );
    observer.observe(csFooter);
  }
</script>

