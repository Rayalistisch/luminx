---
import { Image } from "astro:assets";
import websiteGsmteamImage from "../assets/images/website-gsmteam.png";
import repairPluginImage from "../assets/images/repair-plugin.png";
import digitalMarketingImage from "../assets/images/digital-marketing-pexels.jpg";
---

<section class="image-grid-section" id="werk" data-bg-color="#FFD6E8">
  <div class="section-header">
    <h2>Geselecteerd Werk</h2>
    <p>Een selectie van onze meest recente projecten waarin creativiteit en strategie samenkomen.</p>
  </div>

  <div class="image-grid">
    <a class="grid-item large" href="/cases/migraties" aria-label="Bekijk project Migraties">
      <Image
        class="grid-item-image"
        src={websiteGsmteamImage}
        alt="Migraties"
        widths={[480, 768, 1200]}
        sizes="(max-width: 1024px) 100vw, 60vw"
        quality={72}
        loading="lazy"
      />
      <div class="grid-item-overlay">
        <div class="grid-item-content">
          <h3>Migraties</h3>
          <p>Complete migratie van Wordpress naar Shopify</p>
        </div>
        <span class="grid-item-hover-indicator" aria-hidden="true">
          <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.8" stroke-linecap="round" stroke-linejoin="round">
            <line x1="7" y1="17" x2="17" y2="7"></line>
            <polyline points="7 7 17 7 17 17"></polyline>
          </svg>
        </span>
      </div>
    </a>

    <a class="grid-item medium" href="/cases/custom-applicaties" aria-label="Bekijk project Custom applicaties">
      <Image
        class="grid-item-image"
        src={repairPluginImage}
        alt="Custom applicaties"
        widths={[420, 640, 900]}
        sizes="(max-width: 1024px) 100vw, 40vw"
        quality={72}
        loading="lazy"
      />
      <div class="grid-item-overlay">
        <div class="grid-item-content">
          <h3>Custom applicaties</h3>
          <p>Custom applicaties voor afspraakbeheer</p>
        </div>
        <span class="grid-item-hover-indicator" aria-hidden="true">
          <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.8" stroke-linecap="round" stroke-linejoin="round">
            <line x1="7" y1="17" x2="17" y2="7"></line>
            <polyline points="7 7 17 7 17 17"></polyline>
          </svg>
        </span>
      </div>
    </a>

    <a class="grid-item medium" href="/cases/digital-marketing" aria-label="Bekijk project Digital Marketing">
      <Image
        class="grid-item-image"
        src={digitalMarketingImage}
        alt="Digital Marketing"
        width={900}
        height={620}
        widths={[420, 640, 900]}
        sizes="(max-width: 1024px) 100vw, 40vw"
        quality={68}
        loading="lazy"
      />
      <div class="grid-item-overlay">
        <div class="grid-item-content">
          <h3>Digital Marketing</h3>
          <p>Compleet doordachte strategie op alle online kanalen</p>
        </div>
        <span class="grid-item-hover-indicator" aria-hidden="true">
          <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.8" stroke-linecap="round" stroke-linejoin="round">
            <line x1="7" y1="17" x2="17" y2="7"></line>
            <polyline points="7 7 17 7 17 17"></polyline>
          </svg>
        </span>
      </div>
    </a>
  </div>
</section>
